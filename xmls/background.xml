<mujoco model="simple_background">

  <worldbody>
    <!-- Floor -->
    <geom name="floor"
          type="plane"
          size="5 5 0.1"
          rgba="0.75 0.75 0.75 1"/>

    <!-- Table -->
    <!-- Table height = 0.45 m -->
    <body name="table" pos="0 0 0.40">

      <!-- Table top (60cm x 40cm, thickness 5cm) -->
      <geom type="box"
            size="0.35 0.25 0.025"
            pos="0 0 0"
            rgba="0.65 0.45 0.25 1"/>

      <!-- Legs -->
      <!-- Leg height = 0.40 m (half = 0.20) -->
      <geom type="box"
            size="0.03 0.03 0.20"
            pos=" 0.27  0.17 -0.225"
            rgba="0.25 0.25 0.25 1"/>

      <geom type="box"
            size="0.03 0.03 0.20"
            pos="-0.27  0.17 -0.225"
            rgba="0.25 0.25 0.25 1"/>

      <geom type="box"
            size="0.03 0.03 0.20"
            pos=" 0.27 -0.17 -0.225"
            rgba="0.25 0.25 0.25 1"/>

      <geom type="box"
            size="0.03 0.03 0.20"
            pos="-0.27 -0.17 -0.225"
            rgba="0.25 0.25 0.25 1"/>

    </body>

    <!-- Light -->
    <light pos="0 0 2.0" dir="0 0 -1" diffuse="1 1 1"/>
  </worldbody>

</mujoco>
